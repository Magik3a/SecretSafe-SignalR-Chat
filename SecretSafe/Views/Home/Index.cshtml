
@{
    ViewBag.Title = "TestSPA";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
        ViewBag.IndexLinkActive = "active";

}



<div class="container templatemo_wrapper">
    <!-- home start -->

    <div class="row">
        <div class="col-sm-6">
            <div class="templatemo_title"><span>SECRET</span>SAVED</div>
            <div class="templatemo_subtitle">No one will ever know!</div>
        </div>
        <div class="col-sm-6 templatemo_home">
            <div class="templatemo_headertitle">Try it for FREE!</div>
            <div class="clear"></div>
            <div class="templatemmo_subheader">A secure chat application built with SignalR</div>
               <div class="clear"></div>
             <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <div class="templatemo_separater">
                            <span class="page"> </span>
                        </div>
                    </div>
                </div>
            <div class="clear"></div>
                @if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>

                        <strong>@Html.ValidationSummary(null, new { @class = "" })</strong>
                    </div>
                }
                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "templatemo_hometext" }))
                {
                        <div id="input-box">

                            <label for="username" id="username-label">Choose a user name to start</label>

                            <input type="text" id="username" class="input-medium search-query form-control" placeholder="Type username here..." name="username" autofocus="autofocus"
                                   maxlength="15" required="required" />
                            <label for="roomname" id="room-label">Choose a room name to start</label>
                            <input type="text" id="roomname" class="input-medium search-query form-control" placeholder="Type room name here..." name="roomname" maxlength="15" required="required" />
                        </div>
                        <button type="submit" class="templatemo_homebuton">Let's chat secretly!</button>

                }
                @if (User.Identity.IsAuthenticated || !Html.ViewData.ModelState.IsValid)
                {
                    <script>
                        $(document).ready(function () {
                            $("#username").attr("disabled", "disabled");
                            $("#username").val("@ViewBag.UserNickName");
                            $("#username-label").html("Change your display name from  <a href='../Manage/ChangeNick' alt='Change Nick' title='Change Nick'>here</a> ")
                        });
                    </script>
                }
        </div>
    </div>
    <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6">
            <div class="templatemo_separater">
                <span class="page"> </span>
