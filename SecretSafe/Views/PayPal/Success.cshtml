@model SecretSafe.Models.PayPalViewData
@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_LayoutTemplate.cshtml";
    ViewBag.PricesLinkActive = "active";

}
<script src="~/Scripts/SecretSafe.js"></script>

<script type="text/javascript">
    var viewModel;

    $(function () {
        var viewModel = new SuccessPaymentViewModel(@Html.Raw(Model.JsonResponse));
        ko.applyBindings(viewModel);
    });
</script>
<div class="container templatemo_wrapper">
    <!-- home start -->

    <div class="row">
        <div class="col-sm-6">
            <div class="templatemo_title"><span>SECRET</span>SAVED</div>
            <div class="templatemo_subtitle">No one will ever know!</div>
        </div>
        <div class="col-sm-6 templatemo_home">
            <div class="templatemo_headertitle">SECRET ORDER</div>
            <div class="clear"></div>
            <div class="templatemmo_subheader">ORDER SUCCESS</div>
            <div class="clear"></div>
            <div class="templatemmo_subheader text-capitalize">YOU ARE NOW WITH @Model.SecurityLevelName</div>

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <div class="templatemo_separater">
                        <span class="page"> </span>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
            <div class="templatemo_hometext" style="font-size: 15px;">
                Transaction ID:
                <p data-bind="text: parent_payment">
                </p>
                Transaction fee:
                <p>
                    Currency:    <span data-bind="text: transaction_fee.currency"></span>
                    <br />
                    Value:  <span data-bind="text: transaction_fee.value"></span>
                </p>
                Total
                <p>
                    Currency:   <span data-bind="text: amount.currency"></span>
                    <br />
                    Total:  <span data-bind="text: amount.total"></span>
                </p>
                State
                <p data-bind="text: state"></p>
                <hr />
                <a href="@Url.Action("Prices", "Home")" title="Packages" class="templatemo_signup">RETURN TO PACKAGES</a>
                <hr />
            </div>
            <div class="clear"></div>

            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <div class="templatemo_separater">
                        <span class="page"> </span>
                    </div>
                </div>
            </div>
            <div class="clear"></div>


        </div>

    </div>
</div>