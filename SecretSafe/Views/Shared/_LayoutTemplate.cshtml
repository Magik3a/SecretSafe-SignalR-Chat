<!DOCTYPE html>
<html>
<head  prefix="og: http://ogp.me/ns#">
    <title>@ViewBag.Title SecretSaved.com</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,700italic,400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- for Google -->
    <meta name="description" content="Totally secret chat application." />
  <meta name="author" content="Svetlin Krastanov - www.s2kdesign.com" />
    <!-- for Facebook -->
    <meta property="og:title" content="www.secretsaved.com" />
    <meta property="og:type" content="article" />
    <meta property="og:image" content="https://secretsaved.com/images/social.png" />
    <meta property="og:url" content="https://secretsaved.com/" />
    <meta property="og:description" content="Totally secret chat application." />
    <meta property="fb:app_id" content="602016046625818"/>
    <!-- for Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="www.secretsaved.com" />
    <meta name="twitter:description" content="Totally secret chat application." />
    <meta name="twitter:image" content="https://secretsaved.com/images/social.png" />



    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/templatemo_misc.css" rel="stylesheet" />
    <link href="~/Content/templatemo_style.css" rel="stylesheet" />
    <link href="~/Content/ChatBox.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.2.4.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/jquery.scrollTo.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/templatemo_custom.js"></script>
    <script src="~/Scripts/bootstrap-collapse.js"></script>
    <script src="~/Scripts/jquery.lightbox.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="templatemo_home" class="templatemo_headerimg"><img src="~/Images/templatemo_header.jpg" alt="templatemo header"></div>
    <div class="templatemo_headerimg_cover"><img src="~/Images/templatemo_header.png" alt="templatemo header"></div>
    <div class="templatemo_headerwrapper">
        <div class="templatemo_menu">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"><span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span></button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div id="top-menu">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="@ViewBag.IndexLinkActive"><a class="menu first" href="@Url.Action("Index", "Home")"><span>HOME</span></a></li>

                                <li class="@ViewBag.PricesLinkActive"><a class="menu" href="@Url.Action("Prices", "Home")"><span>PACKAGES</span></a></li>
                                <li class="@ViewBag.RoomsLinkActive"><a class="menu" href="@Url.Action("Rooms", "Home")"><span>ROOMS</span></a></li>
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </div>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>
            <div class="templatemo_socialmedia">
                @using Microsoft.AspNet.Identity
                @using Microsoft.AspNet.Identity.Owin;

                @if (Request.IsAuthenticated)
                {
                    <div class="templatemo_social">
                        <button class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="Expiration date: @User.Identity.GetExpirationDateForCurrentRole()"> @User.Identity.GetUserRole().ToUpper()</button>

                    </div>

                }

                <div class="templatemo_social"><a href="https://www.facebook.com/sharer/sharer.php?u=secretsaved.com" target="_blank"><img src="~/Images/facebook.png" alt="facebook"></a></div>
                <div class="templatemo_social"><a href="https://twitter.com/share?url=secretsaved.com" target="_blank"><img src="~/Images/twitter.png" alt="twitter"></a></div>
                <div class="templatemo_social"><a href="https://plus.google.com/share?url=secretsaved.com" target="_blank"><img src="~/Images/googleplus.png" alt="googleplus"></a></div>
            </div>
        </div>
        <div class="clear"></div>
        <div style="min-height: 60em">
            @RenderBody()
        </div>


        @RenderSection("scripts", required: false)

        <div class="templatemo_footer">
            <div class="container">
                <div class="row">
                    <p class="pull-left col-md-6">
                        &copy; www.secretsaved.com @DateTime.Now.Year - Version @typeof(SecretSafe.MvcApplication).Assembly.GetName().Version <br />
                        Programmed and designed by Svetlin Krastanov -
                        <a href="http://s2kdesign.com/" title="www.s2kdesign.com" target="_blank">www.s2kdesign.com</a>

                    </p>
                    <div id="https-logo" class="pull-right col-md-6 text-center">

                        <img src="~/Images/paypal-icons.png" class="img-responsive img-thumbnail pull-right col-md-7" />
                        @*<img class="img-responsive img-thumbnail pull-right col-md-5" src="~/Images/secure.png" style="height: 70px;"  />*@

                    </div>
                </div>
            </div>
        </div>
    </div>

     <script>
         $(function () {
             $('[data-toggle="tooltip"]').tooltip()
         });
    </script>
</body>
</html>
